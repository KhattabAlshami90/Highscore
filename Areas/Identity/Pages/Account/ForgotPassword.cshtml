@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Har du glömt lösenordet?";
}

<h1 class="hOne" style="color:#40aa40;">@ViewData["Title"]</h1>
<div class="row">
    <h4 class="hOne" style="color:#40aa40; text-align:left">Skriv in din Email</h4>
    <hr />
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="logFrmInp" autocomplete="off" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="logPrimaryBtn">Återställ lösenord</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
