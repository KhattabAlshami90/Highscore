@model IEnumerable<Highscore.Models.Domain.Game>
<div class="adminGamesContainer">
    <div class=" adminHeaderAndButton">
        <h1 class="headTitle">Spel</h1>
 
        @Html.ActionLink("Nytt Spel", "New", "Games", new { area = "Admin" }, new{@style=" text-align:center;    margin-top:.2rem; color: #10ff41; background-color: #232323; padding: 1rem 1rem; text-decoration: none; font-size: 1.3em;  width:12rem;  border-radius: 1rem; border: 1px solid #017323; height:3rem;"})

    </div>

    <div class="adminGamesTableContainer">
        <table class=" table table-striped" style="color:black;">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Namn</th>
                    <th>År</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model)
                {
                    <tr>
                        <td>@game.Id</td>
                        <td>@game.Title</td>
                        <td>@game.Year</td>
                    </tr>
                }



            </tbody>
        </table>

    </div>


</div>
